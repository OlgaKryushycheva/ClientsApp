@model ClientsApp.Models.Entities.Client

@{
    ViewData["Title"] = "Деталі клієнта";
}

<h1>Деталі клієнта</h1>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Адреса</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Телефон</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-primary">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</p>
